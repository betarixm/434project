#!/bin/sh

SCRIPT_PATH=$(realpath "$0")
SCRIPTS_DIR=$(dirname "$SCRIPT_PATH")
PROJECT_DIR=$(dirname "$SCRIPTS_DIR")

JAR_PATH="$PROJECT_DIR/worker/target/scala-2.13/worker.jar"

if [ ! -f "$JAR_PATH" ]; then
    echo "Jar not found at $JAR_PATH. Try running 'sbt assembly' first."
    exit 1
fi

java -Xmx8g -jar "$JAR_PATH" "$@"
